/*common style*/

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

:root {
  --max-width: 800px;
}

/*common style end*/

/*header style start*/
body {

}

.header {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  max-width: var(--max-width);
  margin: 0 auto;
  padding: 0.75rem 1.5rem;
  border-bottom: dashed 1px #BABABA;

  .blog-title {
    font-family: ui-serif, Georgia, Cambria, "Times New Roman", Times, serif;
    font-size: 1.8rem;
    padding: 0.5rem 0;

    .blog-title-link {
      text-decoration: none;
      color: #000;
    }
  }

  .menu {
    .menu-item {
      display: inline-block;
      font-family: serif;
      padding: 0.5rem 0.5rem 0.5rem 0;
      font-weight: bold;

      .menu-item-link {
        text-decoration: none;
      }
    }
  }
}

/*header style end*/

/*content style start*/
.main {
  max-width: var(--max-width);
  margin: 0 auto;
  padding: 0 5px;
  font-family: serif;

  .post-wrapper {
    .post-title-link {
      text-decoration: none;
      color: #101010;
    }

    .post-time {
      font-size: 0.85rem;
      color: #777;
    }

    .post-content {
      line-height: 1.6;
      font-family: "Times New Roman", serif;

      figure {
        margin: 0 1.5em;
      }

      a {
        text-decoration: none
      }

      a:hover {
        text-decoration: underline;
        color #c80000
      }
    }

    .highlight {
      background-color: #f5f5f5;
      border-radius: 0.5em;
      padding: 0.8em 1em;
      box-shadow: 0 0.5em 0.8em #d2d2d2;
      overflow: auto;

      .gutter {
        padding-right 0.8em;
        border-right: 1px dashed #c8c8c8;
      }

      .code {
        padding-left: 0.8em;
      }
    }

    code {
      background: #eee;
      text-shadow: 0 1px #fff;
      padding: 0 0.3em;
    }

    blockquote {
      background-color: rgba(174, 220, 174, 0.25);
      padding: 0.8rem;
      margin: 1rem 0;
      border-left: 0.35rem solid #5cb85c;
      border-radius: 0.5rem;
      //transition: color 0.2s ease-in-out;
      color: #6c6c6c;
      font-size: 0.9rem;
    }

  }

}

/*content style end*/

/*footer style start*/

.footer {
  //display: flex;
  //flex-wrap: wrap;
  //align-items: center;
  //justify-content: space-between;
  max-width: var(--max-width);
  margin: 15px auto;
  padding: 0.75rem 1.5rem;
  border-top: dashed 1px #BABABA;

  p {
    font-family: ui-serif, Georgia, Cambria, "Times New Roman", Times, serif;
    font-size: 0.8rem;
    text-align: right;
  }
}