.post-wrapper {
  padding-left: 2rem;
  padding-right: 2rem;
  word-break: break-word;

    // 文章标题
    .post-title {
    }

    // 文章一级标题
    .h1-title {
      text-align: center;
    }

    // 文章信息
    .post-meta {
      display: flex;
      flex-wrap: wrap;
      align-items: baseline;
      justify-content center;
      font-size: 0.8rem;
      color: #666;
      padding-bottom: 1rem;
      border-bottom: solid 1px #eee;

      // 标签
      .post-tags {
        a {
          color: #666;
        }
      }

      span {
        padding-left: 0.5rem;
        padding-right: 0.5rem;
      }
    }

    

    // 文章正文
    .post-content {
      line-height: 1.6;
      h1, h2 {
        color: var(--deep-blue);
      }

      a {
        text-decoration: none;
        color: inherit;
      }

      a:hover {
        text-decoration: underline;
        color: var(--link-hover)
      }

      // 代码框 ```内容```
      figure {
        margin: 0;
        background-color: #f3f3f3;
        box-shadow: 0 0 1rem #ddd;
        border-radius: 0.8rem;
        overflow: auto;
        font-size: 0.85rem;
        line-height: 1.25;
      }

      // 引用 >内容
      // 引用的样式
      blockquote {
        // background-color: rgba(174, 220, 174, 0.25);
        background-color: rgb(240, 255, 255)
        padding: 0.5rem 0.5rem 0.5rem 1.5rem;
        margin: 0;
        border-radius: 0.5rem;
        box-shadow: 0 0 1rem rgb(235, 235, 235);
        border-left: 0.3rem solid #ccc;
        //transition: color 0.2s ease-in-out;
        // text-shadow: 0 1px #fff;
        color: #666;
        font-size: 0.9rem;
        // font-style: italic;
      }

      img {
        display: block;
        margin: 0 auto;
        width: 100%;
      }

    }

