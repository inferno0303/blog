.post-wrapper {
    // 文章标题链接
    .post-title-link {
      text-decoration: none;
      color: #000;
    }

    // 文章发布时间
    .post-time {
      font-size: 0.85rem;
    }

    // 文章正文
    .post-content {
      line-height: 1.6;

      figure {
        margin: 0 1.5em;
      }

      a {
        text-decoration: none
      }

      a:hover {
        text-decoration: underline;
        color #c80000
      }
    }

    // 代码块相关
    .highlight {
      background-color: #f5f5f5;
      border-radius: 0.5em;
      padding: 0.8em 1em;
      box-shadow: 0 0.5em 0.8em #d2d2d2;
      overflow: auto;

      .gutter {
        padding-right 0.8em;
        border-right: 1px dashed #c8c8c8;
      }

      .code {
        padding-left: 0.8em;
      }
    }

    code {
      background: #eee;
      text-shadow: 0 1px #fff;
      padding: 0 0.3em;
    }

    blockquote {
      background-color: rgba(174, 220, 174, 0.25);
      padding: 0.8rem;
      margin: 1rem 0;
      border-left: 0.35rem solid #5cb85c;
      border-radius: 0.5rem;
      //transition: color 0.2s ease-in-out;
      color: #6c6c6c;
      font-size: 0.9rem;
    }

  }