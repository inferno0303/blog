<header class="header">
    <div class="header-wrapper">
        <div class="blog-title">
            <a href="<%- url_for() %>" class="blog-title-link">
                <%= config.title %>
            </a>
        </div>
        <nav class="menu">
            <% for (name in theme.menu) { %>
                <li class="menu-item">
                    <a href="<%- url_for(theme.menu[name]) %>">
                        <%= name %>
                    </a>
                </li>
            <% } %>
        </nav>
    </div>
</header>