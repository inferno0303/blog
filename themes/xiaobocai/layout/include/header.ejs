<header class="header">
    <div class="header-wrapper">
        <div class="blog-title">
            <a href="<%- url_for() %>" class="blog-title-link">
                <%= config.title %>
            </a>
        </div>
        <nav class="navbar">
            <div class="menu">
                <% for (name in theme.menu) { %>
                    <div class="menu-item">
                        <a href="<%- url_for(theme.menu[name]) %>" class="menu-item-link">
                            <%= name %>
                        </a>
                    </div>
                    <% } %>
            </div>
        </nav>
    </div>
</header>