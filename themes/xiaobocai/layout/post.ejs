<article class="post-wrapper">
  <div class="post-title">
    <h1 class="h1-title">
      <%= page.title %>
    </h1>
  </div>
  <div class="post-meta">
    <span class="post-tags">
      <% page.tags.each(tag=> { %>
        <a href="<%- url_for("/tags/" + tag.name) %>">#<%- tag.name %></a>
        <% }) %>
    </span>
    <span class="post-time"><%- date(page.date, "YYYY-MM-DD" ) %></span>
  </div>
  <div class="post-content">
    <%- page.content %>
  </div>
</article>