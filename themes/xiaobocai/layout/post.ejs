<article class="post">
  <div class="post-title" id="post-title">
    <h1 class="h1-title">
      <%= page.title %>
    </h1>
  </div>
  <div class="post-meta">
    <span class="post-tags">
      <% page.tags.each(tag=> { %>
        <a href="<%- url_for("/tags/" + tag.name) %>">#<%- tag.name %></a>
      <% }) %>
    </span>
    <span class="post-word-count"><%- page.raw.length %>字</span>
    <span class="post-time"><%- date(page.date, "YYYY-MM-DD" ) %></span>
  </div>
  <div class="post-content">
    <%- page.content %>
  </div>
</article>
<script>
  // 修改网页标题
  document.title = document.getElementById("post-title").innerText + ' - ' + document.getElementById("website-title").innerText;
</script>