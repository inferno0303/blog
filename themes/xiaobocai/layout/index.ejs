<!-- 首页模板 -->
<section class="posts">
    <% page.posts.each(post => { %>
        <article class="post-wrapper">
            <h1 class="post-title">
                <a class="post-title-link" href="<%- url_for(post.path) %>">
                    <%= post.title %>
                </a>
            </h1>
            <div class="post-meta">
                <span class="post-time">
                    <%- date(post.date, "YYYY-MM-DD" ) %>
                </span>
            </div>
            <div class="post-excerpt">
                <%- post.excerpt %>
            </div>
        </article>
    <% }) %>
</section>
